// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pokedex {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  pokemons Pokemon[]
}

model Pokemon {
  id Int @id 
  number Int
  name String
  species String
  pokedex Pokedex @relation(fields: [pokedexId], references: [id])
  pokedexId Int

}

model PokemonType {
  
}


